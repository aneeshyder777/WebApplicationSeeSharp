@{
}

@model List<WebApplicationNew.Models.Entities.Student>
<h1>Students</h1>

<table class="table">
   <thread>
       <tr>
           <th>Id</th>
           <th>Name</th>
           <th>Email</th>
           <th></th>
       </tr>
  </thread>
  <tbody>
      @foreach (var student in Model)
        { 
            <tr>
                <td>@student.id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class=" btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.id">Edit</a>
                </td>
            </tr>
        }
    </tbody>

</table>